<mvc:View controllerName="com.pr36.app.controller.DocMan" xmlns:pr="com.pr36.app.control" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" xmlns:m="sap.m" xmlns:layout="sap.ui.layout" xmlns:c="sap.ui.core">
    <m:Page busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}" id="page" navButtonPress="onNavBack"
            showNavButton="true" title="{i18n>docTitle}">
        <m:content>
            <ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" subSectionLayout="TitleOnLeft" showTitleInHeaderContent = "true" showHeaderContent = "true" >
                <headerTitle>
                    <ObjectPageHeader

                                      objectTitle="{ProductName}"
                                      id="ObjectPageLayoutHeaderTitle"
                                      isObjectIconAlwaysVisible="false"
                                      isObjectTitleAlwaysVisible="false"
                                      isObjectSubtitleAlwaysVisible="false"
                                      isActionAreaAlwaysVisible="true"
                                      showPlaceholder = "false">
                    </ObjectPageHeader>
                </headerTitle>
                <headerContent>
                    <m:Label text="Document Management Console" />
                </headerContent>

                <sections>
                    <ObjectPageSection title="Documents" icon="sap-icon://document">
                        <subSections>
                            <ObjectPageSubSection title="Upload">
                                <blocks>
                                    <l:VerticalLayout class="sapUiSmallMargin" width="50%">
                                        <l:VerticalLayout id="container" >
                                            <m:UploadCollection
                                                    id="upload"
                                                    maximumFilenameLength="55"
                                                    maximumFileSize="10"
                                                    multiple="true"
                                                    showSeparators="All"
                                                    change="onChange"
                                                    fileDeleted="onFileDeleted"
                                                    filenameLengthExceed="onFilenameLengthExceed"
                                                    fileRenamed="onFileRenamed"
                                                    fileSizeExceed="onFileSizeExceed"
                                                    typeMissmatch="onTypeMissmatch"
                                                    uploadComplete="onUploadComplete"
                                                    beforeUploadStarts="onBeforeUploadStarts"
                                                    uploadTerminated="onUploadTerminated"
                                                    items="{Product_Docs}"
                                                    templateShareable="true"
                                                    uploadUrl=""
                                                    instantUpload="false"
                                                    width="50%"
                                                    >
                                                <m:items>
                                                    <m:UploadCollectionItem
                                                            documentId="{documentId}"
                                                            fileName="{DocName}"
                                                            mimeType="{mimeType}"
                                                            thumbnailUrl="{thumbnailUrl}"
                                                            enableEdit="{enableEdit}"
                                                            enableDelete="true"
                                                            visibleDelete="{visibleDelete}"
                                                            visibleEdit="{visibleEdit}"
                                                            attributes="{attributes}"
                                                            statuses="{statuses}">
                                                        <m:attributes>
                                                            <m:ObjectAttribute
                                                                    title="{title}"
                                                                    text= "{text}"
                                                                    active="{active}"
                                                                    textDirection="{textDirection}"/>
                                                        </m:attributes>
                                                        <m:statuses>
                                                            <m:ObjectStatus
                                                                    title="{title}"
                                                                    text="{text}"
                                                                    state="{state}"
                                                                    icon="{icon}"
                                                                    iconDensityAware="{iconDensityAware}"
                                                                    textDirection="{textDirection}"/>
                                                        </m:statuses>
                                                    </m:UploadCollectionItem>
                                                </m:items>
                                            </m:UploadCollection>
                                    </l:VerticalLayout>
                                    <m:Button
                                            id="Button"
                                            text="Upload Now"
                                            press="onStartUpload">
                                    </m:Button>
                                    </l:VerticalLayout>
                                </blocks>
                            </ObjectPageSubSection>
                            <ObjectPageSubSection title="Documents">
                                <blocks>
                                    <m:Table busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin" id="lineItemsList2" items="{Product_Docs}"
                                             noDataText="{i18n>detailLineItemTableNoDataText}" updateFinished="onListUpdateFinishedDocuments" width="60%" mode="SingleSelectMaster" selectionChange="doSelect">
                                        <m:headerToolbar>
                                            <m:Toolbar id="lineItemsToolbar2">
                                                <m:Title id="lineItemsHeader2" text="{detailView>/documentItemTitle}"/>
                                            </m:Toolbar>
                                        </m:headerToolbar>
                                        <m:columns>
                                            <m:Column>
                                                <m:Text text="{i18n>detailLineItemTableIDColumnDocuments}"/>
                                            </m:Column>
                                            <m:Column>
                                                <m:Text text="{i18n>detailLineItemTableIDColumnVersionDocuments}"/>
                                            </m:Column>
                                            <m:Column>
                                                <m:Text text="{i18n>detailLineItemTableIDColumnOwnerDocuments}"/>
                                            </m:Column>
                                        </m:columns>
                                        <m:items>
                                            <m:ColumnListItem mode="Active">
                                                <m:cells>
                                                    <m:ObjectIdentifier text="{DocName} "/>
                                                    <m:ObjectIdentifier text="{Version}"/>
                                                    <m:ObjectIdentifier text="{Owner}"/>
                                                </m:cells>
                                            </m:ColumnListItem>
                                        </m:items>
                                    </m:Table>
                                </blocks>
                            </ObjectPageSubSection>
                        </subSections>
                    </ObjectPageSection>

                    <ObjectPageSection title="Metadata / Classification" icon="sap-icon://document">
                        <subSections>
                            <ObjectPageSubSection title="Document Metadata">
                                <blocks>
                                    <m:Table busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin" id="lineItemsList5" items="{fake}"
                                             noDataText="no Document Details" updateFinished="onListUpdateFinishedDocuments" width="50%">
                                        <m:columns>
                                            <m:Column>
                                                <m:Text text="Metadata"/>
                                            </m:Column>
                                            <m:Column>
                                                <m:Text text="Value"/>
                                            </m:Column>
                                        </m:columns>
                                        <m:items id="items">
                                            <m:ColumnListItem>
                                                <m:cells>
                                                    <m:ObjectIdentifier text="{faker}"/>

                                                </m:cells>
                                            </m:ColumnListItem>
                                        </m:items>
                                    </m:Table>
                                </blocks>
                            </ObjectPageSubSection>
                            <ObjectPageSubSection title="Classification">
                                <blocks>
                                    <layout:VerticalLayout>
                                        <c:Fragment id="class_fragment" fragmentName="com.pr36.app.view.ClassManEdit" type="XML"/>
                                    </layout:VerticalLayout>
                                </blocks>
                            </ObjectPageSubSection>
                        </subSections>
                    </ObjectPageSection>
                </sections>

            </ObjectPageLayout>
        </m:content>
        <m:footer>
            <m:OverflowToolbar id="footerToolbar">
                <m:ToolbarSpacer/>

            </m:OverflowToolbar>
        </m:footer>

    </m:Page>
</mvc:View>
