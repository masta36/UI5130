<mvc:View controllerName="com.pr36.app.controller.ClassMan" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:pr="com.pr36.app.control" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" xmlns:m="sap.m" xmlns:c="sap.ui.core"  xmlns:com="sap.ui.commons" xmlns:layout="sap.ui.layout">
    <m:Page busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}" id="page" navButtonPress="onNavBack"
            showNavButton="true" title="{i18n>classTitle}" xmlns:t="sap.ui.table">
        <m:content>
            <ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" subSectionLayout="TitleOnLeft" showTitleInHeaderContent = "true" showHeaderContent = "true" >
                <headerTitle>
                    <ObjectPageHeader

                                      objectTitle="{ProductName}"
                                      id="ObjectPageLayoutHeaderTitle"
                                      isObjectIconAlwaysVisible="false"
                                      isObjectTitleAlwaysVisible="false"
                                      isObjectSubtitleAlwaysVisible="false"
                                      isActionAreaAlwaysVisible="true"
                                      showAnchorBar="false"
                                      showPlaceholder = "false">
                    </ObjectPageHeader>
                </headerTitle>
                <headerContent>
                    <m:Label text="Classification Management Console" />
                </headerContent>

                <sections>
                    <ObjectPageSection title="" icon="sap-icon://document">
                        <subSections>
                            <ObjectPageSubSection>
                                <blocks>
                                    <m:IconTabBar class="sapUiResponsiveContentPadding" id="iconTabBar">
                                    <m:items>
                                    <m:IconTabFilter icon="sap-icon://database" id="iconTabBarFilter1" tooltip="Basic">
                                      <m:Table busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin" id="lineItemsList3" items="{Product_Class/Basic}"
                                             noDataText="{i18n>detailLineItemTableNoDataText}" updateFinished="onListUpdateFinishedDocuments" width="50%">
                                        <m:headerToolbar>
                                            <m:Toolbar id="lineItemsToolbar3">
                                                <m:Title id="lineItemsHeader3" text="Basic"/>
                                            </m:Toolbar>
                                        </m:headerToolbar>
                                        <m:columns>
                                            <m:Column>
                                                <m:Text text="Characteristic"/>
                                            </m:Column>
                                            <m:Column>
                                                <m:Text text="Value"/>
                                            </m:Column>
                                        </m:columns>
                                        <m:items>
                                            <m:ColumnListItem>
                                                <m:cells>
                                                    <m:ObjectIdentifier text="{char}" id="char" />
                                                    <m:Input value="{value}" id="val" app:multi="{multi}" app:value_model="{type}" showValueHelp="true" valueHelpRequest="getF4"/>
                                                </m:cells>
                                            </m:ColumnListItem>
                                        </m:items>
                                    </m:Table>
                                    </m:IconTabFilter>

                                        <m:IconTabFilter icon="sap-icon://bus-public-transport" id="iconTabBarFilter2" tooltip="Publication">

                                            <m:Table busyIndicatorDelay="{detailView>/lineItemTableDelay}" class="sapUiResponsiveMargin" id="lineItemsList4" items="{Product_Class/Publication}"
                                                     noDataText="{i18n>detailLineItemTableNoDataText}" updateFinished="onListUpdateFinishedDocuments" width="50%">
                                                <m:headerToolbar>
                                                    <m:Toolbar id="lineItemsToolbar4">
                                                        <m:Title id="lineItemsHeader4" text="Publication"/>
                                                    </m:Toolbar>
                                                </m:headerToolbar>
                                                <m:columns>
                                                    <m:Column>
                                                        <m:Text text="Characteristic"/>
                                                    </m:Column>
                                                    <m:Column>
                                                        <m:Text text="Value"/>
                                                    </m:Column>
                                                </m:columns>
                                                <m:items>
                                                    <m:ColumnListItem>
                                                        <m:cells>
                                                            <m:ObjectIdentifier text="{char}" />
                                                            <m:Input value="{value}" id="publ1" app:multi="{multi}" app:value_model="{type}" showValueHelp="true" valueHelpRequest="getF4"/>
                                                        </m:cells>
                                                    </m:ColumnListItem>
                                                </m:items>
                                            </m:Table>
                                        </m:IconTabFilter>
                                    </m:items>
                                    </m:IconTabBar>
                                </blocks>
                            </ObjectPageSubSection>
                        </subSections>
                    </ObjectPageSection>
                </sections>

            </ObjectPageLayout>
        </m:content>
        <m:footer>
            <m:OverflowToolbar id="footerToolbar">
                <m:ToolbarSpacer/>

            </m:OverflowToolbar>
        </m:footer>

    </m:Page>
</mvc:View>
