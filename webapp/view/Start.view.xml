<mvc:View controllerName="com.pr36.app.controller.Start" xmlns:pr="com.pr36.app.control" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.suite.ui.commons" xmlns:ux="sap.uxap" xmlns:m="sap.m" xmlns:l="sap.ui.layout">
    <m:Page busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}" id="page" navButtonPress="onNavBack"
            showNavButton="false" title="Product Information Cockpit">
    <m:content>

        <ux:ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" subSectionLayout="TitleOnLeft" showTitleInHeaderContent = "true" showHeaderContent = "true" showAnchorBar="false">
        <ux:headerTitle>
            <ux:ObjectPageHeader objectImageURI=""
                              objectImageShape="Square"
                              objectTitle="Product Information Cockpit"
                              id="ObjectPageLayoutHeaderTitle"
                              isObjectIconAlwaysVisible="false"
                              isObjectTitleAlwaysVisible="false"
                              isObjectSubtitleAlwaysVisible="false"
                              isActionAreaAlwaysVisible="true"
                              showPlaceholder = "false">
            </ux:ObjectPageHeader>
        </ux:headerTitle>
        <ux:headerContent>
            <l:VerticalLayout>
               <m:Label text="projektraum36 GmbH &amp; Co. KG" />
            </l:VerticalLayout>
        </ux:headerContent>
            <ux:sections>
            <ux:ObjectPageSection title="" >
            <ux:subSections>
            <ux:ObjectPageSubSection title="Welcome">
            <ux:blocks>
                <l:VerticalLayout>
                    <m:Label design="Bold" text="" />
                    <m:Text text="This is a demonstrator for visualization and editing of all kind of Product-relevant information by using SAP / OpenUI5.\r\nPlease feel free to use our app â€“ we are looking forward to your feedback!\r\n\r\nEnjoy" />
                </l:VerticalLayout>
                <m:StandardTile
                        icon="sap-icon://log"
                        type="Create"
                        title="Product Information Cockpit (PIC)"
                        info="Start Application"
                        infoState="" press="openPIC"/>

            </ux:blocks>
            </ux:ObjectPageSubSection>
            </ux:subSections>
                </ux:ObjectPageSection>
                <ux:ObjectPageSection title="" >
                <ux:subSections>
                <ux:ObjectPageSubSection title="Features">
                <ux:blocks>
                    <DynamicContainer class="marginTopLeft" displayTime="4000">
                        <tiles>
                            <GenericTile header="Features"
                                         size="M"
                                         frameType="TwoByOne"
                                         press="press"
                                         backgroundImage="images/products_trans.png">
                                <tileContent>
                                    <TileContent footer="">
                                        <content>
                                            <NewsContent
                                                    contentText="All Product-relevant information at a glance"
                                                    >
                                            </NewsContent>
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                            <GenericTile header="Catalog-Navigation"
                                         size="M"
                                         frameType="TwoByOne"
                                         press="press"
                                         backgroundImage="images/products_trans.png">
                                <tileContent>
                                    <TileContent>
                                        <content>
                                            <NewsContent
                                                    contentText="multi-level Product-Catalog-navigation"
                                                    >
                                            </NewsContent>
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                            <GenericTile header="Text-Editing"
                                         size="M"
                                         frameType="TwoByOne"
                                         press="press"
                                         backgroundImage="images/products_trans.png">
                                <tileContent>
                                    <TileContent>
                                        <content>
                                            <NewsContent
                                                    contentText="Inline Text-Editor for formatted Product-texts"
                                                    >
                                            </NewsContent>
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                            <GenericTile header="Document-Management"
                                         size="M"
                                         frameType="TwoByOne"
                                         press="press"
                                         backgroundImage="images/products_trans.png">
                                <tileContent>
                                    <TileContent>
                                        <content>
                                            <NewsContent
                                                    contentText="Inline Document-Management"
                                                    >
                                            </NewsContent>
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                            <GenericTile header="Classification-Management"
                                         size="M"
                                         frameType="TwoByOne"
                                         press="press"
                                         backgroundImage="images/products_trans.png">
                                <tileContent>
                                    <TileContent>
                                        <content>
                                            <NewsContent
                                                    contentText="Inline Classification-Management"
                                                    >
                                            </NewsContent>
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                            <GenericTile header="Responsive"
                                         size="M"
                                         frameType="TwoByOne"
                                         press="press"
                                         backgroundImage="images/products_trans.png">
                                <tileContent>
                                    <TileContent>
                                        <content>
                                            <NewsContent
                                                    contentText="100% responsive Design.\r\n Supports Desktop, Smartphone and Tablet"
                                                    >
                                            </NewsContent>
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                            <GenericTile header="Run-Modes"
                                         size="M"
                                         frameType="TwoByOne"
                                         press="press"
                                         backgroundImage="images/products_trans.png">
                                <tileContent>
                                    <TileContent>
                                        <content>
                                            <NewsContent
                                                    contentText="Fiori Launchpad Integration\r\nor Standalone-Application"
                                                    >
                                            </NewsContent>
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>

                        </tiles>
                    </DynamicContainer>
                    <DynamicContainer class="marginTopLeft">
                    <tiles>
                        <GenericTile
                                header="Get in Contact"
                                frameType="TwoByOne"
                                icon="sap-icon://arrow-right">
                            <tileContent>
                                <TileContent footer="">
                                    <content>
                                        <JamContent
                                                contentText="Interested in getting in touch with our products?\r\nPlease write a mail to info@projektraum36.de"
                                                subheader="(c) 2015 projektraum36 GmbH &amp; Co. KG"
                                                value="">
                                        </JamContent>
                                    </content>
                                </TileContent>
                            </tileContent>
                        </GenericTile>
                    </tiles>
                    </DynamicContainer>

                </ux:blocks>
                </ux:ObjectPageSubSection>
                </ux:subSections>
                </ux:ObjectPageSection>
                </ux:sections>
        </ux:ObjectPageLayout>
        </m:content>
        <m:footer>
            <m:OverflowToolbar id="footerToolbar">
                <m:ToolbarSpacer/>

            </m:OverflowToolbar>
        </m:footer>
    </m:Page>
</mvc:View>
