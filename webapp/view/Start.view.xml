<mvc:View controllerName="com.pr36.app.controller.Start" xmlns:pr="com.pr36.app.control" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" xmlns:m="sap.m" xmlns:layout="sap.ui.layout">
    <m:Page busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}" id="page" navButtonPress="onNavBack"
            showNavButton="{device>/system/phone}" title="Product Information Cockpit">
        <m:content>
            <m:ObjectHeader
                    icon="images/products.png"
                    iconDensityAware="false"
                    title="Product Information Cockpit">
            </m:ObjectHeader>

                <m:Label design="Bold" text="Demonstrator for displaying / editing of all product relevant data within one App" />
                <m:TileContainer
                        id="container"
                        tiles="{/TileCollection}">
                    <m:StandardTile
                            icon="sap-icon://thing-type"
                            type="{type}"
                            number="{number}"
                            numberUnit="{numberUnit}"
                            title="{title}"
                            info="{info}"
                            infoState="{infoState}" />
                </m:TileContainer>

        </m:content>
        <m:footer>
            <m:OverflowToolbar id="footerToolbar">
                <m:ToolbarSpacer/>

            </m:OverflowToolbar>
        </m:footer>

    </m:Page>
</mvc:View>
