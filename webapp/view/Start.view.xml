<mvc:View controllerName="com.pr36.app.controller.Start" xmlns:pr="com.pr36.app.control" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.uxap" xmlns:m="sap.m" xmlns:layout="sap.ui.layout">
    <m:Page busy="{detailView>/busy}" busyIndicatorDelay="{detailView>/delay}" id="page" navButtonPress="onNavBack"
            showNavButton="{device>/system/phone}" title="Product Information Cockpit">
        <m:content>
            <ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" subSectionLayout="TitleOnLeft" showTitleInHeaderContent = "true" showHeaderContent = "true" >
                <headerTitle>
                    <ObjectPageHeader

                            objectTitle="projektraum36"
                            objectImageURI="images/products.png"
                            id="ObjectPageLayoutHeaderTitle"
                            isObjectIconAlwaysVisible="false"
                            isObjectTitleAlwaysVisible="false"
                            isObjectSubtitleAlwaysVisible="false"
                            isActionAreaAlwaysVisible="true"
                            showPlaceholder = "true">
                    </ObjectPageHeader>
                </headerTitle>
                <headerContent>
                    <m:Label text="Product Management Cockpit" />
                </headerContent>

                <sections>
                    <ObjectPageSection title="">
                        <subSections>
                            <ObjectPageSubSection>
                                <blocks>
                                    <m:TileContainer
                                            id="container"
                                            tiles="{/TileCollection}">
                                        <m:StandardTile
                                                type="{type}"
                                                number="{number}"
                                                numberUnit="{numberUnit}"
                                                title="{title}"
                                                info="{info}"
                                                infoState="{infoState}" />
                                    </m:TileContainer>
                                </blocks>
                            </ObjectPageSubSection>
                        </subSections>
                    </ObjectPageSection>


                </sections>

            </ObjectPageLayout>
        </m:content>
        <m:footer>
            <m:OverflowToolbar id="footerToolbar">
                <m:ToolbarSpacer/>

            </m:OverflowToolbar>
        </m:footer>

    </m:Page>
</mvc:View>
