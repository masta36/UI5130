<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <TableSelectDialog
            id="select_country"
            noDataText="No Products Found"
            title="Select Product"
            search="handleSearch"
            confirm="handleClose"
            close="handleClose"
            items="{
			path : '/combo_country',
			sorter : {
				path : 'name',
				descending : false
			}
		}">
        <ColumnListItem>
            <cells>
                <ObjectIdentifier
                        title="{ID}"
                        text="{name}" />
            </cells>
        </ColumnListItem>
        <columns>
            <Column width="12em">
                <header>
                    <Text text="Product" />
                </header>
            </Column>

        </columns>
    </TableSelectDialog>
</core:FragmentDefinition>