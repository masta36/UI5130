<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <TableSelectDialog
            id="select_country"
            noDataText="No Products Found"
            title="Select Product"
            search="handleSearch"
            confirm="handleClose"
            close="handleClose"
            items="{
			path : '/combo_country',
			sorter : {
				path : 'name',
				descending : false
			}
		}">
        <ColumnListItem>
            <cells>
                <ObjectIdentifier
                        title="{ID}"
                        text="{name}" />
                <Text text="{SupplierName}" />
                <Text text="{Width} x {Depth} x {Height} {DimUnit}" />
                <ObjectNumber
                        number="{WeightMeasure}"
                        unit="{WeightUnit}"
                        state="{
						path: 'WeightMeasure',
						formatter: 'sap.m.sample.TableSelectDialog.Formatter.weightState'
					}" />
                <ObjectNumber
                        number="{Price}"
                        unit="{CurrencyCode}" />
            </cells>
        </ColumnListItem>
        <columns>
            <Column width="12em">
                <header>
                    <Text text="Product" />
                </header>
            </Column>
            <Column
                    minScreenWidth="Tablet"
                    demandPopin="true" >
                <header>
                    <Text text="Supplier" />
                </header>
            </Column>
            <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Right">
                <header>
                    <Text text="Dimensions" />
                </header>
            </Column>
            <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Center">
                <header>
                    <Text text="Weight" />
                </header>
            </Column>
            <Column hAlign="Right">
                <header>
                    <Text text="Product" />
                </header>
            </Column>
        </columns>
    </TableSelectDialog>
</core:FragmentDefinition>